<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredericka+the+Great&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=delete"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/show.css" />
    <link rel="stylesheet" href="/footer.css" />
    <link rel="stylesheet" href="/rating.css">
    <link rel="stylesheet" href="/nav.css" />
    <title><%= data[0].title %></title>
  </head>
  <body>
    <%- include("../includes/nav.ejs") %>
    <section id="show">
      <h1 class="show-h1"><%= data[0].title %></h1>
      <img src="<%= data[0].image.url %>" alt="" srcset="" class="show-img" />
      <% prc = data[0].price.toLocaleString("en-IN") %>
      <p class="show-description"><%= data[0].description %></p>
      <p class="show-price">Price : ‚Çπ <%= prc %></p>
      <p class="show-location">Location :<%= data[0].location %></p>
      <p class="show-country">Country : <%= data[0].country %></p>
      <p class="show-country">Created By : <%= data[0].owner.username %></p>
      <% if(curruser &&  data[0].owner._id.equals(curruser._id)){ %>
      <div id="owner-btns">
        <a
        href="/listings/edit/<%= data[0]._id %>"
        class="show-edit"
        >Edit</a
      >
      <form
        action="/listings/<%= data[0]._id %>?_method=DELETE"
        method="post"
        onsubmit="return cnfrm()"
        class="show-form"
      >
        <button type="submit" class="show-delete">Delete &cross;</button>
      </form>
      </div>
      <% }else{ %>
          <a class="show-edit" href="/listings/booking/<%= data[0]._id %>">
            Book now
          </a>
       
      <% } %>
    </section>

    <% if(curruser){ %>
    <section id="review">
      <form
        action="/listings/<%= data[0]._id %>/reviews"
        method="post"
        id="review-form"
        novalidate
        class="needs-validation"
      >
        <h1 class="review-h1">Leave a Review</h1>

        <!-- <div class="rating-range">
          <label for="rating" class="review-label">Ratings :</label>
          <input
            type="range"
            name="review[rating]"
            id="rating-range"
            min="1"
            max="5"
            step="0.5"
          />
          <span id="rating-value"></span>
        </div> -->
        <div class="rating-range">
        <fieldset class="starability-slot">
          <legend>First rating:</legend>
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
        <label for="review" class="review-label">Comment :</label>
        <textarea
          name="review[comment]"
          id="review-input"
          cols="10"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Doesn't Looks good!</div>

        <button type="submit" id="review-submit">Submit</button>
      </form>
     
    </section>
    <% } %>
    <section id="reviews-data">
      <h1 id="reviews-data-h1">Reviews</h1>
      <% i = 0 %> <% for( let r in data[0].reviews) {%>
      <div class="review-card">
        <h2><%= ++i %> .  @<%= data[0].reviews[r].author.username %></h2>
        <% if(curruser &&  data[0].reviews[r].author._id.equals(curruser._id)){ %>
        <span>
          <form
            action="/listings/<%= data[0]._id %>/reviews/<%= data[0].reviews[r]._id %>?_method=DELETE"
            method="post"
            class="review-delete"
          >
            <button class="review-delete-btn" type="submit">üóëÔ∏è</button>
          </form>
        </span>
        <% } %>
        <p class="starability-result" data-rating= "<%= data[0].reviews[r].rating %>" >
          Rated: <%= data[0].reviews[r].rating %> stars
        </p>
        <h4>--<%= data[0].reviews[r].comment %></h4>


      </div>
      <% } %>
    </section>

    <%- include("../includes/footer.ejs") %>
    <script src="/validate-boot.js"></script>
    <script>
      function cnfrm() {
        let c = confirm("Do you Want to Delete <%= data[0].title %> ");
        return c;
      }
      document.getElementById("rating-range").addEventListener("input", () => {
        let rating = document.getElementById("rating-range").value;
        document.getElementById("rating-value").innerText = `‚≠êÔ∏è ${rating}`;
      });
    </script>
  </body>
</html>
